{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/rumman-shop.myshopify.com/products/configure/246909/edit
{% endcomment %}
{% if product.metafields.custom_fields["cost_breakdown"] != blank %}
  <div class="custom-field custom-field__cost-breakdown custom-field__type--field-collection">
    <h3 class="custom-field--title">Cost Breakdown</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign title_array = product.metafields.custom_fields["title"] | split: separator %}
      {% assign value_array = product.metafields.custom_fields["value"] | split: separator %}
      {% assign fc_keys = product.metafields.custom_fields["cost_breakdown"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--cost fc-index--{{ index }}">
          <div class="fc-field field__title">
            {{ title_array[index] }}
          </div>
          <div class="fc-field field__value">
            {{ value_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}